@{
    ViewBag.Title = "ExamStart";
    Layout = "~/Views/Shared/_ExamLayout.cshtml";
}
@{
    <h2>@ViewBag.examData.ExamName</h2>
    using (Html.BeginForm("Submit", "Student", FormMethod.Post, new { @class = "form-horizontal examForm", id="ExamForm" }))
    {
        for (int i = 0; i < ViewBag.examData.Questions; i++)
        {
            <div class="fb-radio form-group" id="field-q@(i+1)">
                <label class="fb-radio-group-label" for="q2">Question Number @(i + 1)</label>
                <div id="question@(i+1)">
                    @ViewBag.Questions[i].Que
                </div><br>
                <div class="radio-group">
                    <input class="radio-group" id="q@(i+1)-0" name="q@(i+1)" type="radio" value="1"><label for="q@(i+1)-0">  @ViewBag.Questions[i].Op1</label><br>
                    <input class="radio-group" id="q@(i+1)-1" name="q@(i+1)" type="radio" value="2"><label for="q@(i+1)-1">  @ViewBag.Questions[i].Op2</label><br>
                    <input class="radio-group" id="q@(i+1)-2" name="q@(i+1)" type="radio" value="3"><label for="q@(i+1)-2">  @ViewBag.Questions[i].Op3</label><br>
                    <input class="radio-group" id="q@(i+1)-3" name="q@(i+1)" type="radio" value="4"><label for="q@(i+1)-3">  @ViewBag.Questions[i].Op4</label><br>
                </div>
                <hr />
                <a onclick="clearresponse(@(i+1))" class="btn btn-default">Clear Response</a>
                <a onclick="previous(@(i+1), @ViewBag.examData.Questions)" class="btn btn-default">Previous</a>
                <a onclick="next(@(i+1), @ViewBag.examData.Questions)" class="btn btn-default">Next</a>
            </div>

        }

    }

}